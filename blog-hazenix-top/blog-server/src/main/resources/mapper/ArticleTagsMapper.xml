<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.hazenix.mapper.ArticleTagsMapper">

    <insert id="insertBatch">
        insert into article_tags (tags_id,tags_name,article_id) values
        <foreach collection="list" item="item" separator=",">
            (#{item.tagsId},#{item.tagsName},#{item.articleId})
        </foreach>
    </insert>
    <update id="updateTagsName">
        update article_tags
        set tags_name = #{tagsName}
        where tags_id = #{id}
    </update>
    <delete id="deleteByArticleIds">
        delete from article_tags where article_id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <select id="countByIds" resultType="java.lang.Integer">
        select count(tags_id) from article_tags where tags_id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>
    <select id="getListByArticleId" resultType="java.lang.Integer">
        select tags_id
        from article_tags where article_id = #{id}
    </select>
</mapper>
