<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.hazenix.mapper.LinkMapper">
    <insert id="insert">
        insert into link
            (name,description,url,avatar,sort,status,create_time)
        values
            (#{name},#{description},#{url},#{avatar},#{sort},#{status},#{createTime})
    </insert>
    <update id="updateLink">
        update link
        <set>
            <if test="name != null and name != null">
                name = #{name},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteLinks">
        delete from link where id in
        <foreach item="id" collection="list" separator="," close=")" open="(" >
            #{id}
        </foreach>
    </delete>

    <select id="pageQuery" resultType="top.hazenix.entity.Link">
        select id,name,description,url,avatar,sort,status,create_time
        from link
        <where>
            <if test="name != null and name != ''">
                and name like '%${name}%'
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by sort desc
    </select>
    <select id="getLinkById" resultType="top.hazenix.entity.Link">
        select id,name,description,url,avatar,sort,status,create_time
        from link
        where id = #{id}
    </select>
    <select id="list" resultType="top.hazenix.entity.Link">
        select id,name,description,url,avatar,sort,status,create_time
        from link
        order by sort desc
    </select>
</mapper>
